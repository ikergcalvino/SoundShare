<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.SearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.search.SearchBar
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/search_users_posts" />

        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/text_users_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:text="@string/users"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/profileLayout1"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginStart="20sp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="@string/profile_image"
                android:src="@drawable/ic_account_circle" />

            <TextView
                android:id="@+id/text_profile_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arroba_username"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/profileLayout2"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginStart="20sp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_image_2"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="@string/profile_image"
                android:src="@drawable/ic_account_circle" />

            <TextView
                android:id="@+id/text_profile_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arroba_username"
                android:textSize="18sp" />

        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" />

        <TextView
            android:id="@+id/text_posts_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:text="@string/posts"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/postProfileLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_image_3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:contentDescription="@string/profile_image"
                android:src="@drawable/ic_account_circle" />

            <TextView
                android:id="@+id/text_profile_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arroba_username"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/globalPostLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50sp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/postLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/albumImage"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:contentDescription="@string/album_image"
                    android:src="@drawable/album" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/songName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/song_name"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/albumName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/album_name"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/artistName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/artist_name"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/postText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/post_text"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/postProfileLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_image_4"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:contentDescription="@string/profile_image"
                android:src="@drawable/ic_account_circle" />

            <TextView
                android:id="@+id/text_profile_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arroba_username"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/globalPostLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50sp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/postLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/albumImage2"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:contentDescription="@string/album_image"
                    android:src="@drawable/album" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/songName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/song_name"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/albumName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/album_name"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/artistName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/artist_name"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/postText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/post_text"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>