<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/popup_background"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- ImageView para la imagen -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/album" />

    <!-- LinearLayout para el texto -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TextView para el nombre de la canci칩n -->
        <TextView
            android:id="@+id/songName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la canci칩n"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <!-- TextView para el nombre del 치lbum -->
        <TextView
            android:id="@+id/albumName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del 치lbum"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <!-- TextView para el nombre del artista -->
        <TextView
            android:id="@+id/artistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del artista"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>
